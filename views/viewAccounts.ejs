                                        <a class="nav-link" href="/logout">Logout</a>
                                        <% } %>
                        </li>


                    </ul>
                </div>
            </nav>
        </div>
    </header>


    <div class="buffer" id="buffer"></div>
    <main class="site-content" role="main">

        <section class="container">
            <div>
                <label for="">Create New Employee Account</label>
                <button><a href="/signup">HERE</a></button>
            </div>

            <table class="table-style">
                <thead>
                    <th>
                        User ID
                    </th>
                    <th>
                        First name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Username
                    </th>

                    <th>
                        Is Admin?
                    </th>
                    <th>
                        Edit
                    </th>
                </thead>
                <tbody>
                    <% for (let iCount=0; iCount < allAccounts.length; iCount++) { %>
                        <tr>
                            <td>
                                <%= allAccounts[iCount].user_id%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].first_name%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].last_name%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].email%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].username%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].is_admin%>
                            </td>
                            <td>
                                <button class="edit-btn" data-user-id="<%= allAccounts[iCount].user_id %>">Edit</button>
                            </td>
                        </tr>
                        <tr class="edit-form" id="edit-form-<%= allAccounts[iCount].user_id %>" style="display: none;">
                            <td colspan="100%">
                                <form action="">
                                    <label for="">First Name</label>
                                    <input type="text" value="<%= allAccounts[iCount].first_name %>">
                                    <label for="">Last name</label>
                                    <input type="text" value="<%= allAccounts[iCount].last_name %>">
                                    <label for="">Email</label>
                                    <input type="email" value="<%= allAccounts[iCount].email %>">
                                    <label for="">Username</label>
                                    <input type="text" value="<%= allAccounts[iCount].last_name %>">
                                    <label for="">New Password</label>
                                    <input type="password" value="">
                                    <label>Is Admin?</label>
                                    <% if(allAccounts[iCount].is_admin) { %>
                                        <input type="radio" name="is_admin_<%= allAccounts[iCount].user_id %>"
                                            value="yes" checked> Yes
                                        <input type="radio" name="is_admin_<%= allAccounts[iCount].user_id %>"
                                            value="no"> No
                                        <% } else { %>
                                            <input type="radio" name="is_admin_<%= allAccounts[iCount].user_id %>"
                                                value="yes"> Yes
                                            <input type="radio" name="is_admin_<%= allAccounts[iCount].user_id %>"
                                                value="no" checked> No
                                            <% } %>



                                </form>

                                <button>Save Changes</button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>


        </section>



    </main>

