                        </li>
                        <% if (!user) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login" id="login">Login</a>
                            </li>
                            <% } else if (user && user.admin) { %>
                                <!-- Show this if user has admin permissions -->
                                <li class="nav-item">
                                    <a class="nav-link" href="/results">Survey Results</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/accounts" id="accounts">View Accounts</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/logout">Logout</a>
                                </li>

                                <% } else { %>
                                    <!-- Show this for general logged-in users -->
                                    <li class="nav-item">
                                        <a class="nav-link" href="/results">Survey Results</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="/account" id="account">My Account</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="/logout">Logout</a>
                                    </li>

                                    <% } %>


                    </ul>
                </div>
            </nav>
        </div>
    </header>


    <div class="buffer" id="buffer"></div>
    <main class="site-content" role="main">

        <section class="container">

            <div>
                <h2>Account Details</h2>
            </div>
            <table class="table-style">
                <thead>
                    <th>
                        User ID
                    </th>
                    <th>
                        First name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>

                </thead>
                <tbody>
                    <% for (let iCount=0; iCount < allAccounts.length; iCount++) { %>
                        <tr>
                            <td>
                                <%= allAccounts[iCount].user_id%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].first_name%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].last_name%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].email%>
                            </td>
                            <td>
                                <%= allAccounts[iCount].username%>
                            </td>

                            <td class="edit-td">
                                <button class="edit-btn btn"
                                    data-user-id="<%= allAccounts[iCount].user_id %>">Edit</button>
                            </td>
                            <td class="">
                                <form id="logoutAndDeleteForm" action="/delete-user/<%= allAccounts[iCount].user_id %>" method="POST" class="edit-td">
                                    <input type="submit" name="LogoutAndDelete" value="Delete" class="btn delete-btn" />
                                </form>
                                
                                <script>
                                    document.getElementById('logoutAndDeleteForm').onsubmit = function (event) {
                                        event.preventDefault(); // Prevent the default form submission
                                
                                        // Show a confirmation dialog
                                        if (confirm("Are you sure you want to delete the user and logout?")) {
                                            // Use AJAX/fetch to make an asynchronous request to /logout-and-delete
                                            fetch('/logout-and-delete/<%= allAccounts[iCount].user_id %>', {
                                                method: 'POST', // Assuming /logout-and-delete is configured to handle POST requests
                                                credentials: 'same-origin' // Include cookies
                                            })
                                            .then(response => {
                                                if (!response.ok) {
                                                    throw new Error('Delete user request failed');
                                                }
                                                // Handle success, e.g., redirect to another page
                                                window.location.href = '/';
                                            })
                                            .catch(error => {
                                                console.error('Delete user error:', error);
                                                // Handle error, e.g., display an error message
                                            });
                                        }
                                    };
                                </script>
                                
                                
                        </tr>
                        <tr class="edit-form" id="edit-form-<%= allAccounts[iCount].user_id %>" style="display: none;">
                            <td colspan="100%">
                                <form action="/modify-user" method="post" class="modify-user">
                                    <label for="">User ID</label>
                                    <input type="text" name="user_id" id="user_id"
                                        value="<%= allAccounts[iCount].user_id%>" readonly required>
                                    <label for="">First Name</label>
                                    <input type="text" name="first_name" value="<%= allAccounts[iCount].first_name%>"
                                        required>
                                    <label for="">Last name</label>
                                    <input type="text" name="last_name" value="<%= allAccounts[iCount].last_name%>"
                                        required>
                                    <label for="">Email</label>
                                    <input type="email" name="email" value="<%= allAccounts[iCount].email%>" required>
                                    <label for="">Username</label>
                                    <input type="text" name="username" value="<%= allAccounts[iCount].last_name%>"
                                        required>
                                    <label for="">Update Password</label>
                                    <input type="password" name="password" value="">


                                    <button type="submit" style="grid-column: 2;" class="btn" id="save-changes">Save Changes</button>
                                </form>


                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>


        </section>



    </main>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-ms-4">
                    <h6>
                        <a href="">
                            <img class="img-fluid" src="images/logo.png" alt="">
                        </a>
                    </h6>
                </div>
            </div>
        </div>
    </footer>

